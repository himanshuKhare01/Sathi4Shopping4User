<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:foreground="?attr/selectableItemBackground"
        android:stateListAnimator="@animator/chat_animator"
        app:cardCornerRadius="10dp">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/receive_image"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:maxWidth="200dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/specs"
        android:adjustViewBounds="true"
        app:riv_corner_radius="10dip"
        android:scrollbars="vertical"
        android:cropToPadding="true"
        app:riv_border_color="@android:color/transparent"
        app:riv_border_width="2dip" />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/receive_layout"
        android:layout_width="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/card_receiver"
        android:orientation="vertical"
        android:stateListAnimator="@animator/chat_animator"
        android:layout_marginBottom="5dp"
        android:background="@drawable/receiver_message_layout"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/receiver_message_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|top"
            android:maxWidth="180dp"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/receive_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="2dp"
            android:layout_gravity="end|bottom"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentTop="@+id/receive_layout"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        android:foreground="?attr/selectableItemBackground"
        android:stateListAnimator="@animator/chat_animator"
        app:cardCornerRadius="10dp">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/sender_image"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:scaleType="centerCrop"
        android:contentDescription="@string/specs"
        android:adjustViewBounds="true"
        app:riv_corner_radius="10dip"
        android:scrollbars="vertical"
        android:cropToPadding="true"
        android:maxWidth="200dp"
        app:riv_border_color="@android:color/transparent"
        app:riv_border_width="2dip" />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/send_layout"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="@+id/receive_layout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:stateListAnimator="@animator/chat_animator"
        android:background="@drawable/sender_message_layout"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sender_messages_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|top"
            android:maxWidth="180dp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite" />
        <TextView
            android:id="@+id/send_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize= "10sp"
            android:layout_marginTop="1dp"
            android:textColor="#FAFAFA"
            android:layout_marginEnd="2dp"
            android:layout_gravity="end|bottom"/>
    </LinearLayout>
</RelativeLayout>