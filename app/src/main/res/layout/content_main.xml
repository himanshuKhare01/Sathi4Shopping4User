<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".Activity.MainActivity"
    android:orientation="vertical"
    tools:showIn="@layout/app_bar_main">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_horizontal_ntb"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <devlight.io.library.ntb.NavigationTabBar
        android:id="@+id/ntb_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        app:ntb_corners_radius="5dp"
        android:stateListAnimator="@animator/main_animator"
        app:ntb_bg_color="@android:color/transparent"
        app:ntb_badge_gravity="top"
        app:ntb_badge_bg_color="@android:color/holo_red_dark"
        app:ntb_badge_title_color="@color/colorWhite"
        app:ntb_badge_position="right"
        app:ntb_badge_use_typeface="true"
        app:ntb_badged="true"
        app:ntb_preview_colors="@array/preview"
        app:ntb_inactive_color="@color/default_color"
        app:ntb_scaled="true"
        app:ntb_tinted="true"
        app:ntb_title_mode="all"
        app:ntb_titled="true"
        app:ntb_swiped="true"/>
</LinearLayout>